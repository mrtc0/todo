<div class="row justify-content-center">
  <div class="col-6">
    <%= form_with(model: @user, url: login_path, local: true, method: :post) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", require: "true" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", require: "true" %>
      </div>
      <div class="row ustify-content-center">
        <div class="mx-auto">
          <div class="form-group">
            <%= f.submit id: "login", class: "btn btn-primary", value: "ログイン" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

